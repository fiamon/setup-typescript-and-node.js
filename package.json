{
  "name": "setup-typescript-and-node",
  "version": "1.0.0",
  "description": "This is a quick setup for projects with Node.js and TypeScript",
  "main": "src/server.ts",
  "scripts": {
    "start:dev": "nodemon --watch 'src/' --exec 'ts-node src/server.ts' -e ts",
    "start": "node dist/src/server.js",
    "build": "tsc"
  },
  "keywords": [
    "typescript",
    "node.js",
    "setup"
  ],
  "author": "Julio Fiamoncini",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
